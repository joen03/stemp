<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_total">

    <TextView
        android:id="@+id/join_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="40sp"/>

    <EditText
        android:id="@+id/join_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="@string/id" />

    <EditText
        android:id="@+id/join_pw"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="@string/pw"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/join_pws"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="PW 확인"
        android:importantForAutofill="no" />

    <LinearLayout
        android:id="@+id/join_phone1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/join_pws"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="휴대폰 번호"
            android:gravity="center"/>

        <TextView
            android:id="@+id/phone1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_gender_ln"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/join_phone1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="성별"
            android:gravity="center"/>
        <Spinner
            android:id="@+id/join_gender"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/join_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/join_gender_ln"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="회원가입"
        android:textSize="25sp"/>
</RelativeLayout>