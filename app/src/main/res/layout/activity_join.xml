<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_total">

    <TextView
        android:id="@+id/join_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="40sp"/>

    <EditText
        android:id="@+id/join_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="@string/id" />

    <EditText
        android:id="@+id/join_pw"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="@string/pw"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/join_pws"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="PW 확인"
        android:importantForAutofill="no" />

    <LinearLayout
        android:id="@+id/join_phone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_pws"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/phone1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="010"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="40sp"/>
        <EditText
            android:id="@+id/phone2"
            android:layout_width="75dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="40sp"/>
        <EditText
            android:id="@+id/phone3"
            android:layout_width="75dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="인증받기"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_phone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_phone1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="인증"/>
    </LinearLayout>

    <Button
        android:id="@+id/join_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/join_phone2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="회원가입"
        android:textSize="25sp"/>
</RelativeLayout>